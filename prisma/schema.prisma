generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int           @id @default(autoincrement())
  createdAt   DateTime      @default(now())
  email       String        @unique
  role        Role          @default(USER)
  UserActions UserActions[]
}

enum Role {
  USER
  ADMIN
}

model Books {
  id          Int           @id @default(autoincrement())
  title       String
  authors     String[]
  genres      String[]
  stockSize   Int
  stockPrice  Int
  sellPrice   Int
  borrowPrice Int
  copies      Int
  UserActions UserActions[]
}

model UserActions {
  id         Int        @id @default(autoincrement())
  type       ActionType
  createdAt  DateTime   @default(now())
  user       Users      @relation(fields: [userId], references: [id])
  userId     Int
  book       Books      @relation(fields: [bookId], references: [id])
  bookId     Int
  returned   Boolean    @default(false)
  returnTime DateTime?
}

enum ActionType {
  SELL
  RENT
}

model Wallet {
  id                      Int     @id @default(autoincrement())
  amount                  Int
  congratulationEmailSent Boolean @default(false)
}

model WalletMovement {
  id      Int          @id @default(autoincrement())
  type    MovementType
  Ammount Int
}

enum MovementType {
  Sell
  Borrow
  Restock
}
